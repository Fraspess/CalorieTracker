<Window x:Class="FavoritesClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Favorites Client" Height="250" Width="400">
    <StackPanel Margin="10">
        <TextBox Name="FoodInput" />
        <Button Content="Add to Favorites" Click="Add_Click" Margin="0,10" FontFamily="Consolas" FontWeight="Heavy" Background="#3ac24e"/>
        <Button Content="Show Favorites" Click="Get_Click" FontFamily="Consolas" FontWeight="Heavy" Background="#3ac24e"/>
        <ListBox Name="FavoritesList" Height="100" Margin="0,10" FontFamily="Consolas" FontWeight="Heavy"/>
    </StackPanel>
</Window>
